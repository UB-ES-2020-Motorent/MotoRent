<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent" android:layout_height="fill_parent"
    android:orientation="vertical"
    android:gravity="clip_horizontal">


    <ImageButton
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_gravity="center_horizontal"
        android:background="@android:color/transparent"
        app:srcCompat="@drawable/google_sign_in" android:id="@+id/signin_btn"
        android:adjustViewBounds="true" android:contentDescription="@string/signin"
        android:cropToPadding="true" android:layout_width="150dp"
        android:layout_marginBottom="30dp" android:layout_marginTop="40dp"/>
</LinearLayout>